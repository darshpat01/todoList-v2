<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>TodoList</title>
    <link
      href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;700&display=swap"
      rel="stylesheet"
    />
    <link rel="stylesheet" href="css/todos.css" />
    <link
      rel="stylesheet"
      href="css/lib/Font Awesome/fontawesome-free-5.13.1-web/fontawesome-free-5.13.1-web/css/all.min.css"
    />
  </head>
  <body>
    <div id="container">
      <h1>TO-DO LIST</h1>
      <form action="/" method="POST">
        <input type="text" placeholder="Add New Todo" name="name" id="name" />
        <button type="submit" id="plus"><i class="fas fa-plus"></i></button>
        <!-- <button type="submit">Add</button> -->
      </form>
      <br />
      <ul>
        <% for (let task of tasks){ %>
        <li>
          <span class="list_items"
            ><a class="far fa-trash-alt" href="/remove/<%=  task._id%> "></a
          ></span>
          <%= task.name %>
        </li>
        <% } %>
      </ul>
    </div>

    <script src="js/lib/jquery-3.5.1.min.js"></script>
    <!-- <script src="js/todos.js"></script> -->
  </body>
</html>
